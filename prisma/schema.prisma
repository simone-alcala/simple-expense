// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String

  @@map("users")
}

model Expense {
  id          Int @id @default(autoincrement())
  description String @unique
  type        String

  @@map("expenses")
}

model Request {
  id          Int @id @default(autoincrement())
  description String
  createdDate DateTime
  status      String
  amount      Decimal
  userId      Int

  @@map("requests")
}

model RequestItem {
  id          Int @id @default(autoincrement())
  requestId   Int
  expenseId   Int
  date        DateTime
  observation String
  amount      Decimal
  receipt     String

  @@map("requestItems")
}

model Approval {
  id          Int @id @default(autoincrement())
  requestId   Int
  userId      Int
  date        DateTime
  observation String
  status      String

  @@map("approvals")
}