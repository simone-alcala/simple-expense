// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int @id @default(autoincrement())
  firstName String
  lastName  String
  email     String @unique
  password  String

  requests  Request[]
  approvals Approval[]

  @@map("users")
}

model Expense {
  id          Int @id @default(autoincrement())
  description String @unique
  type        String

  requestItem RequestItem[]

  @@map("expenses")
}

model Request {
  id          Int @id @default(autoincrement())
  description String
  createdDate DateTime
  status      String
  amount      Decimal

  requesterId Int
  user        User @relation(fields: [requesterId], references: [id])

  requestItems  RequestItem[]
  approvals     Approval[]

  @@map("requests")
}

model RequestItem {
  id          Int @id @default(autoincrement())

  requestId   Int
  request     Request @relation(fields: [requestId], references: [id])

  expenseId   Int
  expense     Expense @relation(fields: [expenseId], references: [id])

  date        DateTime
  observation String
  amount      Decimal
  receipt     String

  @@map("requestItems")
}

model Approval {
  id          Int @id @default(autoincrement())

  requestId   Int
  request     Request @relation(fields: [requestId], references: [id])

  approverId  Int
  user        User @relation(fields: [approverId], references: [id])

  date        DateTime
  observation String
  status      String

  @@map("approvals")
}